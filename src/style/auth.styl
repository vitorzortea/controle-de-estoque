.section-auth
  animation opacide-main 1s forwards
  max-width: 400px
  margin: 0 auto

  h2
    display: flex
    text-transform: uppercase
    font-size: 22px
    align-items: center
    margin-bottom: 10px

    &:after, &:before
      content: ''
      display: table
      flex: auto
      height 2px
      background-color: #dcc8b2

    &:after
      margin-left: 20px

    &:before
      margin-right: 20px

  label
    position: relative
    display: table
    width: 100%

    p
      padding: 2px 5px
      background-color: white
      margin: 0 10px -.8em
      position relative
      z-index: 2
      display: table
      font-size: 0.9em

    i.far
      display: flex
      position: absolute
      bottom: 11px
      right: 1px
      padding: 16px
      background: white
      border-radius: 10px
      z-index: 2
      cursor pointer

      &:hover
        color: #ff9800

    input
      background-color: white
      border: 1px solid #d4d2ca
      font-size: 16px
      line-height: 1em
      padding: 12px 15px
      border-radius: 6px
      display: table
      margin-bottom: 10px
      width: 100%

      &:focus, &:hover
        border-color: #ff9800
        box-shadow: 0 0 0 2px #e7f3ff
        caret-color: #ff9800

      &.input-error, &.input-error:focus, &.input-error:hover
        border-left: solid 5px red

  form button
    background-color: #DB9B63
    border-radius: 6px
    font-size: 20px
    line-height: 1em
    padding: 14px 16px
    width: 100%
    color: #fff
    font-weight: bold

    &:hover
      background-color: #f39649

  a
    display: table
    margin: 0 auto
    font-size: 14px
    color: #a95a04
    margin-top: 15px

    &:hover
      text-decoration: underline

  p.error
    text-align: left
    padding: 0 0 15px
    color: #F44336
    margin-top: -5px

  #bt-conta
    border-radius: 6px
    font-size: 17px
    line-height: 1em
    padding: 14px 30px
    background-color: #ffba70
    margin: 0 auto
    color: #6b2d0f
    display: table

    &:hover
      background-color: #ffad50

  button
    cursor: pointer

@keyframes opacide-main
  0%
    opacity 0
    transform translate(0, 10px)

  100%
    opacity 1
    transform translate(0, 0)
