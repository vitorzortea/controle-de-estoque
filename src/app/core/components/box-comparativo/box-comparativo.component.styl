@import '../../../../style/dashboards'

.box-comparative
  border-left: solid 8px transparent
  padding: 20px
  background-position: right bottom
  background-repeat: no-repeat
  background-size: 15%
  .row
    margin-top: 10px
    &>span
      padding-right: 20px
      text-align: center
      &>span
        display: block
        font-weight: bold
        font-size: 2em
        padding: 5px 0
        i
          vertical-align: middle
          font-size: 0.5em

  &.box-positive
    border-left-color: #22c55e
    background-image: url('/assets/img/icon-positive.png')
    h2+p, .color-green
      color: #22c55e

  &.box-negative
    border-left-color: #ef4544
    background-image: url('/assets/img/icon-negative.png')
    h2+p, .color-red
      color: #ef4544
