#auth
  min-height: 100vh
  display: flex
  flex-wrap: wrap

  &>main
    width: 50%
    background-color: white
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

    &>span
      flex: auto
      padding: 30px 0
      width: 80%

      h1
        max-width: 300px
        width: 100%
        margin: 0 auto 20px

    &>footer
      display: flex
      flex-wrap: wrap
      align-items: center
      justify-content: space-between
      width: 80%
      padding: 10px 0

      p>a
        font-weight: bold
      div>a
        font-size: 26px
        margin: 0 5px

  &>div
    width: 50%
    background-image: url('/assets/img/bg-auth.png')
    background-size: cover
    background-position: center
    position: relative
    display: flex
    align-items: center
    justify-content: center

    &>span
      position relative
      width: 65%
      max-width: 80%
      &>img:last-child
        position: absolute
        top: 0
        left: 0
        width: 100%
        height 100%
        animation: lockmove 2.5s infinite;

    &>svg
      position: absolute
      top: 0
      left: 0
      width: 20%
      height: 100%

      &>polyline
        fill: white


@keyframes lockmove
  0%
    transform: translate(0, -30px)
  50%
    transform: translate(0, 0px)
  100%
    transform: translate(0, -30px)
